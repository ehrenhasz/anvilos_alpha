FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

# Basic dependencies matching the host environment
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    python3 \
    python3-pip \
    sudo \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Set up a working directory
WORKDIR /mnt/anvil_temp

# Default command
CMD ["/bin/bash"]

