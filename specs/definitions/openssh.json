{
  "name": "openssh",
  "version": "9.6p1",
  "source_url": "https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-9.6p1.tar.gz",
  "archive_name": "openssh-9.6p1.tar.gz",
  "build_subdir": "openssh-src",
  "env": {
      "LDFLAGS": "-L{staging}/lib -static -pthread"
  },
  "configure": "./configure --prefix=/ --sysconfdir=/etc/ssh --with-ssl-dir={staging} --with-zlib={staging} --without-pam --without-selinux --with-privsep-path=/var/empty --enable-static --host=x86_64-unknown-linux-musl",
  "build": "make -j$(nproc)",
  "install": "make install DESTDIR={rootfs} && mkdir -p {rootfs}/var/empty"
}
